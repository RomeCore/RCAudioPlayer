<mng:ManagerControl x:Class="RCAudioPlayer.WPF.Management.PlaybackPanel"
					xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
					xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
					xmlns:local="clr-namespace:RCAudioPlayer.WPF"
					xmlns:mng="clr-namespace:RCAudioPlayer.WPF.Management"
					xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
					mc:Ignorable="d" 
					d:DesignHeight="70" d:DesignWidth="800">
	<DockPanel>

		<ContentControl x:Name="playerHolder" DockPanel.Dock="Bottom"/>

		<local:PipelineStreamSlider x:Name="streamSlider" Margin="0 -8" DockPanel.Dock="Top" 
			IsMoveToPointEnabled="True" AutoToolTipPlacement="TopLeft"/>

	</DockPanel>
</mng:ManagerControl>