<UserControl x:Class="RCAudioPlayer.WPF.Pipeline.PipelineElementWrapper"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:RCAudioPlayer.WPF"
			 xmlns:t="clr-namespace:RCAudioPlayer.WPF.Translation"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800">
	<Expander>

		<Expander.Header>
			
			<DockPanel Margin="-5 0" LastChildFill="False">

				<CheckBox x:Name="enabler" HorizontalAlignment="Left" VerticalAlignment="Center" DockPanel.Dock="Left"/>

				<Button Click="ResetButton_Click" Content="{t:Translate reset}" DockPanel.Dock="Right"/>

			</DockPanel>
			
		</Expander.Header>

		<ContentControl x:Name="controlHolder"/>

	</Expander>
</UserControl>