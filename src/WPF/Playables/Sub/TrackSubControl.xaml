<local:PlayableSubControl x:Class="RCAudioPlayer.WPF.Playables.Sub.TrackSubControl"
						  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
						  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
						  xmlns:local="clr-namespace:RCAudioPlayer.WPF.Playables.Sub"
						  mc:Ignorable="d"
						  d:DesignHeight="70" d:DesignWidth="300">
	<DockPanel LastChildFill="True">

		<Image x:Name="thumbnail" DockPanel.Dock="Left" Height="60" HorizontalAlignment="Left"/>
		
		<Grid Margin="5" VerticalAlignment="Center">

			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>

			<Label Grid.Row="0" FontSize="16" VerticalAlignment="Top">
				<TextBlock x:Name="titleText"/>
			</Label>

			<Label Grid.Row="1" FontSize="12" VerticalAlignment="Bottom">
				<TextBlock x:Name="artistText"/>
			</Label>

		</Grid>

	</DockPanel>
</local:PlayableSubControl>