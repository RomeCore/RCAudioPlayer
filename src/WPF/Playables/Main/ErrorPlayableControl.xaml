<local:PlayableControl x:Class="RCAudioPlayer.WPF.Playables.Main.ErrorPlayableControl"
					   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
					   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
					   xmlns:local="clr-namespace:RCAudioPlayer.WPF.Playables"
					   xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
					   mc:Ignorable="d" 
					   d:DesignHeight="40" d:DesignWidth="400">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Button x:Name="showErrorButton" Margin="5 0" Style="{DynamicResource MaterialDesignFloatingActionMiniButton}">
			<icons:PackIconMaterial Kind="Alert"/>
		</Button>
		
		<TextBlock Grid.Column="1" x:Name="stringText" Foreground="Red" VerticalAlignment="Center"/>

	</Grid>
</local:PlayableControl>
