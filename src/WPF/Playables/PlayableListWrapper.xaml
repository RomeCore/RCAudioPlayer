<UserControl x:Class="RCAudioPlayer.WPF.Playables.PlayableWrapper"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:RCAudioPlayer.WPF.Playables"
			 xmlns:ctrl="clr-namespace:RCAudioPlayer.WPF"
			 xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
			 mc:Ignorable="d" 
			 d:DesignHeight="40" d:DesignWidth="400">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="40"/>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<ctrl:DragElement x:Name="dragElement" Margin="5 5 10 5"/>

		<Button x:Name="playButton" Grid.Column="1" Click="PlayButton_Click" Style="{DynamicResource MaterialDesignFloatingActionMiniButton}">
			<icons:PackIconMaterial Kind="Play"/>
		</Button>

		<ContentControl x:Name="playableHolder" Grid.Column="2" Margin="5 0 0 0"/>

	</Grid>
</UserControl>
